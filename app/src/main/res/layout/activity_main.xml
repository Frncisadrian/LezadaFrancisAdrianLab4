<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CL1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/osaka"
        android:layout_width="wrap_content"
        android:layout_height="252dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/osaka"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Dorm Hostel Osaka"
        android:textColor="#0000ff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.628" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textColor="#ff0000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.761" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Osaka, Japan"
        android:textColor="#0000ff"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.761" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance from UST:"
        android:textColor="#ff0000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,661 Km"
        android:textColor="#0000ff"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.84" />


    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:onClick="displayToast"
        android:text="BACK"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="displaySnack"
        android:text="NEXT"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/CL1"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintLeft_toLeftOf="@+id/CL1"
        app:layout_constraintRight_toRightOf="@+id/CL1"
        app:layout_constraintTop_toTopOf="@+id/CL1"
        app:layout_constraintVertical_bias="0.969" />


</android.support.constraint.ConstraintLayout>